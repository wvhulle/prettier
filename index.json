{
    "importOrder": [
        "^\\@data",
        "^\\@backend",
        "^\\@frontend",
        "^\\$lib/(.*)$",
        "^[./]",
        "^node:",
        "^lodash",
        "^[^./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "arrowParens": "avoid",
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "trailingComma": "none",
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "overrides": [
        {
            "files": "*.json",
            "options": { "parser": "json" }
        }
    ]
}
